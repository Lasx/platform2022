                <div carousel-item="">
                    <div>
                        <img src="~/Resources/pic/bg/bg1.jpg" alt="" class="bgpic" />
                    </div>
                    <div>
                        <img src="~/Resources/pic/bg/bg2.jpg" alt="" class="bgpic" />
                    </div>
                    <div>
                        <img src="~/Resources/pic/bg/bg3.jpg" alt="" class="bgpic" />
                    </div>
                    <div>
                        <img src="~/Resources/pic/bg/bg4.jpg" alt="" class="bgpic" />
                    </div>
                    <div>
