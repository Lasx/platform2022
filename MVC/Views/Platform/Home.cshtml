                    </div>
                    <div>
                        <img src="~/Resources/pic/bg/bg6.jpg" alt="" class="bgpic" />
                    </div>
                    <div>
                        <img src="~/Resources/pic/bg/bg7.jpg" alt="" class="bgpic" />
                    </div>
                </div>
            </div>
        </div>

        <!--背景模糊-->
        <div class="gbGlassmorphism" style="position:absolute;width:100%;height:100%;"></div>

        <!--标题区-->
        <div style="position:absolute;width:100%;top:20%;text-align:center;z-index:9999;">
            <p class="chinaTitle">地质灾害信息平台</p>
            <br />
            <p class="englishTitle">GEOLOGICAL DISASTER INFORMATION PLATFORM</p>
        </div>

        <!--功能区模糊-->
        <div class="moduleGlassmorphism" style="position:absolute;width:100%;height:350px;bottom:0px;"></div>

        <!--功能区-->
        <div style="position:absolute;width:100%;height:350px;bottom:0px;">
            <div style="margin:15px;margin-top:30px;border-radius: 15px;border: 2px solid rgba(255, 255, 255, 0.25);">

                <div class="layui-row">
                    <div class="layui-col-xs6">
                        <div class="grid-demo grid-demo-bg1">
                            <div class="layui-row">
                                <div class="layui-col-xs6">
                                    <div class="grid-demo grid-demo-bg1">
                                        <div class="layui-row">
                                            <div class="layui-col-xs6">
                                                <div class="grid-demo grid-demo-bg1">
                                                    <!--后台管理系统-->
