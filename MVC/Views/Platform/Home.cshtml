                                                        <img id="sys-uav-img" src="~/Resources/pic/sys/uav.png" class="sysIcon" />
                                                        <br />
                                                        <p class="sysTitle">航线规划系统</p>
                                                        <br />
                                                        <button type="button" id="sys-uav-btn" class="layui-btn layui-btn-primary" style="background-color:rgba(0,0,0,0);height:60px;border:1px solid rgba(0,0,0,0);font-size:20px;">点击进入</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="layui-col-xs6">
                        <div class="grid-demo">
                            <div class="layui-row">
                                <div class="layui-col-xs6">
                                    <div class="grid-demo grid-demo-bg1">
                                        <div class="layui-row">
                                            <div class="layui-col-xs6">
                                                <div class="grid-demo grid-demo-bg1">
                                                    <!--地质要素采集系统-->
                                                    <div style="margin-top:30px;margin-bottom:30px;text-align:center;">
                                                        <img id="sys-geology-img" src="~/Resources/pic/sys/geology.png" class="sysIcon" />
                                                        <br />
                                                        <p class="sysTitle">地质要素采集系统</p>
