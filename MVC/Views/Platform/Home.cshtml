                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        layui.use(['carousel', 'form'], function () {
            var carousel = layui.carousel
                , form = layui.form;

            //图片轮播
            carousel.render({
                elem: '#piccarousel'
                , anim: 'fade'
                , autoplay: true
                , interval: 6000
                , width: '100%'
                , height: '100%'
                , arrow: 'none'
                , indicator: 'inside'
            });
        });


        //后台管理系统
        $("#sys-admin-img").on("click", function () {
            window.location.href = "LoginAdmin";
        });
        $("#sys-admin-btn").on("click", function () {
            window.location.href = "LoginAdmin";
        });
        //实景模型管理系统
        $("#sys-model-img").on("click", function () {
            window.location.href = "LoginModel";
        });
        $("#sys-model-btn").on("click", function () {
            window.location.href = "LoginModel";
        });
        //地质灾害监测系统
        $("#sys-monitor-img").on("click", function () {
            window.location.href = "LoginMonitor";
        });
        $("#sys-monitor-btn").on("click", function () {
            window.location.href = "LoginMonitor";
        });
        //航线规划系统
        $("#sys-uav-img").on("click", function () {
            window.location.href = "LoginUav";
        });
        $("#sys-uav-btn").on("click", function () {
            window.location.href = "LoginUav";
        });
        //地质要素采集系统
        $("#sys-geology-img").on("click", function () {
            window.location.href = "LoginGeology";
        });
        $("#sys-geology-btn").on("click", function () {
            window.location.href = "LoginGeology";
        });
        //影像对比分析系统
        $("#sys-image-img").on("click", function () {
            window.location.href = "LoginImage";
        });
        $("#sys-image-btn").on("click", function () {
            window.location.href = "LoginImage";
        });
        //点云对比分析系统
        $("#sys-pts-img").on("click", function () {
            window.location.href = "LoginPointcloud";
        });
        $("#sys-pts-btn").on("click", function () {
            window.location.href = "LoginPointcloud";
        });

    </script>
</body>
</html>